# Development Dockerfile using Pants-built PEX binary
# This Dockerfile is managed by Pants and should be built with: pants package apps/vector_service:vector-service-dev

FROM python:3.12-slim

WORKDIR /app

# Install runtime dependencies and gRPC health probe
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

ARG TARGETARCH
RUN set -eux; \
    arch="${TARGETARCH:-amd64}"; \
    case "$arch" in \
      amd64) probe_arch="amd64"; probe_sha256="8302d54fc41d4ffbfea6871b6a04584265d5eabbe738aee2966f9a574b6f17d1" ;; \
      arm64) probe_arch="arm64"; probe_sha256="8ebe934e7cf29a65ca31d671a97949467fba6977d656b5e6d6c40902ae7402f6" ;; \
      *) echo "Unsupported arch for grpc_health_probe: $arch"; exit 1 ;; \
    esac; \
    curl -fsSL -o /usr/local/bin/grpc_health_probe \
      "https://github.com/grpc-ecosystem/grpc-health-probe/releases/download/v0.4.37/grpc_health_probe-linux-${probe_arch}"; \
    echo "${probe_sha256}  /usr/local/bin/grpc_health_probe" | sha256sum -c -; \
    chmod +x /usr/local/bin/grpc_health_probe

# Copy the self-contained PEX binary built by Pants
COPY apps.vector_service/vector_service.pex /app/vector_service.pex

# Run as non-root user for security (catches permission issues early)
RUN groupadd --gid 1000 appuser && \
    useradd --uid 1000 --gid appuser --no-create-home appuser && \
    chown -R appuser:appuser /app
USER appuser

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV ENVIRONMENT=development

# Expose port
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD grpc_health_probe -addr=localhost:8002 || exit 1

# Development workflow:
# PEX files are self-contained archives - volume mounts won't override the code inside.
# To see code changes:
#   1. Rebuild the PEX: pants package apps/vector_service:vector_service
#   2. Rebuild the image: docker compose build vector-service
#   3. Restart the container: docker compose up -d vector-service
# For faster iteration, consider running the service directly: uv run python -m src.main

# Run the PEX binary
ENTRYPOINT ["/app/vector_service.pex"]
